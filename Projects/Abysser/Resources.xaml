<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:assets="clr-namespace:Abysser.Presenters.Assets"
    xmlns:assetViews="clr-namespace:Abysser.Views.Assets" 
    xmlns:chunks="clr-namespace:Abysser.Presenters.Chunks"
    xmlns:chunkViews="clr-namespace:Abysser.Views.Chunks" 
    xmlns:presenters="clr-namespace:Abysser.Presenters"
    xmlns:views="clr-namespace:Abysser.Views">
    
    <!-- Main templates -->
    <DataTemplate DataType="{x:Type presenters:AbysserPresenter}">
        <views:AbysserView/>
    </DataTemplate>
    
    <!-- Management templates -->
    <DataTemplate DataType="{x:Type assets:AssetManager}">
        <assetViews:AssetManagerView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type chunks:ChunkManager}">
        <chunkViews:ChunkManagerView/>
    </DataTemplate>
    
    <!-- Asset templates -->
</ResourceDictionary>